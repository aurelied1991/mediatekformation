{% block body %}
    <div class="row mt-3">
        <div class="col">
            {# Informations détaillées de la playlist #}
            <h4 class="text-info mt-5">{{ playlist.name }}</h4>
            <strong>Catégories : </strong>
                {# boucle pour afficher les catégories #}
                {% set anccategorie = '' %}
                {% for playlist in playlistcategories %}
                    {{ playlist.name }}&nbsp;
                {% endfor %}
            <br />
            <strong>Nombre de vidéos :</strong>
                {{ playlist.formations|length }}
                <br /><br />
            <strong>Description :</strong><br />
                {{ playlist.description|nl2br }}
        </div>
        <div class="col">
            {# boucle sur l'affichage des formations de la playlist #}
            {% for formation in playlistformations %}
                <div class="row mt-1">
                    <div class="col-md-auto">
                        {# Affichage de la miniature si il y en a une avec le lien vers la formation concernée #}
                        {% if formation.miniature %}
                            <a href="{{ path('formations.showone', {id:formation.id}) }}">
                                <img src="{{ formation.miniature }}" alt="Miniature de l'image de la formation">
                            </a>
                        {% endif %}  
                    </div>
                    {# Titre de la formation avec lien vers sa page détaillée #}
                    <div class="col d-flex align-items-center">
                        <a href="{{ path('formations.showone', {id:formation.id}) }}" 
                           class="link-secondary text-decoration-none">
                            {{ formation.title }}
                        </a>          
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}